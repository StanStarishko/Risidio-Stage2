{
  "version": 2,
  "name": "ai-ux-audit-tool",
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/frontend/api/$1"
    },
    {
      "src": "/_next/(.*)",
      "dest": "/frontend/_next/$1"
    },
    {
      "src": "/favicon\\.(ico|svg)",
      "dest": "/frontend/favicon.$1"
    },
    {
      "src": "/robots\\.txt",
      "dest": "/frontend/robots.txt"
    },
    {
      "src": "/manifest\\.json",
      "dest": "/frontend/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}