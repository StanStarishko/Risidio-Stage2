{
  "version": 2,
  "name": "ai-ux-audit-tool",
  "builds": [
    { "src": "frontend/next.config.js", "use": "@vercel/next" },

    { "src": "api/audit/index.ts", "use": "@vercel/node", "config": { "maxDuration": 30 } },
    { "src": "api/audit/[id].ts",  "use": "@vercel/node", "config": { "maxDuration": 10 } }
  ],
  "routes": [
    { "src": "^/api$", "dest": "/api" },
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
